{% import "components/Navicons.njk" as icons %}
<site-nav state="close" current-route="{{page.fileSlug}}">
    <button aria-label="navigation toggle">
        <svg width="16" viewBox="0 0 16 40" style="pointer-events: none">
            <g fill="currentColor">
                <circle style="--a-d:0ms" cx="8" cy="8" r="4" />
                <circle style="--a-d:100ms" cx="8" cy="20" r="4" />
                <circle style="--a-d:200ms" cx="8" cy="32" r="4" />
            </g>
        </svg>
    </button>
    <div class="drop-down">
        <ul class="links">
            <li data-nav-link>
                <a tabindex="-1" href="/" {{'aria-current=page' if page.fileSlug == ""}} router:order="0">
                    {{icons.icon('home')}}
                    <span>home</span></a>
            </li>
            <li data-nav-link>
                <a tabindex="-1" href="/work/" class="" {{'aria-current=page' if page.fileSlug == "work"}} router:order="1">
                    {{icons.icon('work')}}
                    <span>works</span></a>
            </li>
            <li data-nav-link>
                <a tabindex="-1" href="/writing/" {{'aria-current=page' if page.fileSlug == "writing"}} router:order="2">
                    {{icons.icon('writing')}}
                    <span>writing</span></a>
            </li>
            <li data-nav-link>
                <a tabindex="-1" href="/about/" {{'aria-current=page' if page.fileSlug == "about"}} router:order="3">
                    {{icons.icon('about')}}
                    <span>about</span></a>
            </li>
            <hr class="function-separator">
            <li class="functions">
                <ul>
                    <li data-nav-role="back">
                        <button tabindex="-1"  >
                            <svg width="32" height="16">
                                <g transform="translate(4 8)" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                    <path d="M0,0 m4,-4 L0,0 l4,4 M0,0 h28" stroke="currentColor" />
                                </g>
                            </svg>
                        </button>
                    </li>
                    <li data-nav-role="top">
                        <button  tabindex="-1" >
                            <svg width="16" height="32">
                                <g transform="translate(8 4)" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                        <g transform="rotate(90)">
                                            <path d="M0,0 m4,-4 L0,0 l4,4 M0,0 h28" stroke="currentColor" />
                                        </g>
                                </g>
                            </svg>
                        </button>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</site-nav>