<theme-switch role="switch" 
    onclick="{
    if(localStorage.getItem('theme') === 'dark'){
        localStorage.setItem('theme','light')
        document.documentElement.classList.remove('dark')
    }else{
        localStorage.setItem('theme','dark')
        document.documentElement.classList.add('dark')
    }
    }">
    <button>
        <svg width="64" height="64" viewBox="0 0 32 32" fill="currentColor">
            <defs>
                <mask id="crest-clip">
                    <rect x="-50%" y="-50%" width="100%" height="100%" fill="white" />
                    <g class="crest"   fill="white">
                        <circle r="2.5" />
                    </g>
                </mask>
            </defs>
            <g class="shape" transform="translate(16 16)" >
                <g class="beams">
                    <g class="inner">
                        {% for beam in range(0, 8) %}
                            <g transform="rotate({{beam*(360/8)}})">
                                <g transform="translate(-2 -8)">
                                    <g transform="translate(0 0) ">
                                        <polygon points="0,4 4,4 2,0" />
                                    </g>
                                </g>
                            </g>
                        {% endfor %}
                    </g>
                </g>
                <circle class="center" r="3" mask="url(#crest-clip)" />
            </g>
        </svg>
    </button>
</theme-switch>