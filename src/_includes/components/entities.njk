{% macro asset(w = 16, h = 16) %}
    <svg width="{{ w }}" height="{{ h }}">
        {# <rect width="100%" height="100%" fill="red" /> #}
        <g transform="translate(3 8)" fill="none" stroke-width="2" stroke-linejoin="round">
            <polygon points="0,0 5,-7 10,0 5,7" stroke="currentColor" />
        </g>
    </svg>
{% endmacro %}

{% macro arrow(w = 32, h = 16, a = true, r = 0) %}
    <svg width="{{w}}" height="{{h}}">
        <g transform="translate({{w/2}} {{h/2}})" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            {% if a %}
                <g>
                    <path d="M-{{w/2 - 2}},0 m{{w/8}},-{{w/8}} L-{{w/2 - 2}},0 l{{w/8}},{{w/8}} M-{{w/2 - 2}},0 H{{w/2 - 2}}" stroke="currentColor" />
                </g>
            {% else %}
                <g>
                    <path d="M0,-{{h/2 - 2}} m-{{h/8}},{{h/8}} L0,-{{h/2 - 2}} l{{h/8}},{{h/8}} M0,-{{h/2 - 2}} V{{h/2 - 2}}" stroke="currentColor" />
                </g>
            {% endif %}
        </g>
    </svg>
{% endmacro %}