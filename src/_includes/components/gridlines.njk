
<svg id="gridlines" width="100%" height="100%" style="position: fixed;width: 100%; height: 100%; top: 0; left: 0; z-index: -1; contain: paint; " viewBox="0 0 256 256" preserveAspectRatio="xMidYMid slice">
  <defs>
    {% set patternSize = 12 %}
    <pattern id="pattern-grid" viewBox="0 0 {{patternSize}} {{patternSize}}" width="{{patternSize}}" height="{{patternSize}}" patternUnits="userSpaceOnUse" patternTransform="rotate(45)">
      <g stroke="hsl(var(--col-primary))" stroke-width="0.1" vector-effect="">
        <line x1="{{patternSize/2}}" x2="{{patternSize/2}}" y1="0" y2="{{patternSize}}" />
        <line x1="0" x2="{{patternSize}}" y1="{{patternSize/2}}" y2="{{patternSize/2}}" />
      </g>
    </pattern>
    <filter id="filter-grid-smudge">
      <feTurbulence  seed="{{[1,64] | irand}}" type="fractalNoise" baseFrequency="0.01"/>
      <feColorMatrix type="luminanceToAlpha" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.75" intercept="0.45" />
      </feComponentTransfer>
      <feComponentTransfer result="mask">
        <feFuncA type="gamma" exponent="2" />
      </feComponentTransfer>
      <feMorphology in="SourceGraphic" operator="erode" radius="0.2" />
      <feComposite in2="mask" operator="in" result="eroded" />
      <feComposite in="SourceGraphic" in2="mask" operator="out" />
      <feMerge>
        <feMergeNode />
        <feMergeNode in="eroded" />
      </feMerge>
    </filter>
  </defs>
  <rect width="100%" height="100%" fill="url(#pattern-grid)" fill-opacity="0.5"  filter="url(#filter-grid-smudge)"  />
</svg>