<svg id="gridlines" width="100%" height="100%" style="
grid-row: 1/3;grid-column: 1/3; z-index: -1; contain: paint; pointer-events: none;"
 viewBox="0 0 256 256" preserveAspectRatio="xMidYMid slice">
  <defs>
    {% set patternSize = 16 %}
    <pattern id="pattern-grid" viewBox="0 0 {{patternSize}} {{patternSize}}" width="{{patternSize}}" height="{{patternSize}}" patternUnits="userSpaceOnUse" patternTransform="rotate( 45 )">
      {% set sWidth = 0.1 %}
      <g fill="none" stroke="hsl(var(--col-secondary))" stroke-width="var(--s-w,0.15)">
        <line x1="{{patternSize/2}}" x2="{{patternSize/2}}" y1="0" y2="{{patternSize}}" />
        <line x1="0" x2="{{patternSize}}" y1="{{patternSize/2}}" y2="{{patternSize/2}}" />
        <circle cx="{{patternSize/2}}" cy="{{patternSize/2}}" fill="var(--f-col,hsl(var(--col-primary)))" r="0.4" opacity="0.75" />
      </g>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#pattern-grid)" fill-opacity="0.2" />
</svg>