{% import "components/date.njk" as d %}

{% for work in works %}
    <article data-work-index="{{loop.index0}}" class="cramp">
        {# {{d.date(work.date,as="div")}} #}
        <h2>{{work.title}}</h2>
        <p>{{work.preamble}}</p>
        <a href="{{work.path}}">read more</a>
        {% if env.dev %}
            <img src="/assets/img/works{{work.thumb}}" alt="Spliting" />
        {% else %}
            {% image 'img/works', work.thumb, "Splits", '' , {w:"100%",h:"auto",s:"100vw"}%}
        {% endif %}
    </article>
{% endfor %}